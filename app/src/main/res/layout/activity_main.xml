<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#C4C4C4"
        android:id="@+id/vRect1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/arrow_back"
        android:drawablePadding="38dp"
        android:text="Pending Activation"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_alignTop="@id/vRect1"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2 September , 2020"
        android:layout_below="@id/vRect1"
        android:layout_marginTop="26dp"
        android:textSize="14dp"
        android:textColor="#000000"
        android:id="@+id/tvDate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:text="Status : Expired"
        android:textColor="#FE122E"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvStatus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/emojione_monotone_mobile_phone_off"
        android:layout_below="@id/tvStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/tvMobile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMobile"
        android:text="Nexus 5 Insurance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textSize="18dp"
        android:id="@+id/tcName"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Activate Insurance now"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:id="@+id/btnActivate"
        android:padding="10dp"
        android:background="#18F148"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#C4C4C4"
        android:layout_alignParentBottom="true"
        android:id="@+id/vRect3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="#C4C4C4"
        android:layout_above="@id/vRect3"
        android:layout_marginBottom="30dp"
        android:id="@+id/vRect2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/vRect3"
        android:text="Coverage"
        android:textSize="14dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vRect2"
        android:text="Device :"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:id="@+id/tvDevice"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vRect2"
        android:layout_alignParentRight="true"
        android:text="LGE Nexus 5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:id="@+id/tvDeviceName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDevice"
        android:text="Insurance term :"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDevice"
        android:layout_alignParentRight="true"
        android:text="12 months"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vRect3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="All drops and breakage including cracked screen"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14dp"/>

</RelativeLayout>