<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2F2F2F"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/tvAnd03"
        android:text="Hello AND 03"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_below="@id/tvAnd03"
        android:text="Welcome to Layouts"
        android:id="@+id/tvWelcome"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="@drawable/circle"
        android:id="@+id/viewCircle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Name : Murali Krishna"
        android:id="@+id/tvName"
        android:textColor="#FF0000"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_name_1"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/tvName"
        android:textSize="18sp"
        android:text="Age : 23"
        android:textColor="#FF0000"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:textSize="24sp"
        android:height="52dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnNext"
        android:padding="10dp"
        android:text="Next"/>

    <View
        android:id="@+id/viewThree"
        android:layout_width="141dp"
        android:layout_height="12dp"
        android:layout_above="@id/btnNext"
        android:background="#C4C4C4"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="56dp"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/viewTwo"
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_above="@id/viewThree"
        android:background="#C4C4C4"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="31dp"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/viewOne"
        android:layout_width="183dp"
        android:layout_height="31dp"
        android:layout_above="@id/viewTwo"
        android:background="#C4C4C4"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>